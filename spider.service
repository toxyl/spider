[Unit]
Description=Spider
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/etc/spider/spider /etc/spider/config.yaml
ExecReload=/etc/spider/spider /etc/spider/config.yaml
Restart=on-failure
RestartSec=1
StandardOutput=journal
StandardError=journal
SyslogIdentifier=spider

[Install]
WantedBy=multi-user.target
